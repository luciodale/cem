---
import LeafletMap from "../components/LeafletMap.astro";
import { navbarHeight } from "../globals";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contatti">
  <div
    style={{
      height: `calc(100dvh - ${navbarHeight}px)`,
    }}
    class="flex h-full items-center justify-center"
  >
    <div class="w-1/3 flex-shrink-0">
      <img
        src="/images/cem-service.jpeg"
        alt=""
        class="h-full w-full object-cover"
      />
    </div>

    <div class="flex flex-col gap-10 px-10 text-xl leading-normal">
      <div class="flex flex-col gap-1">
        <div class="text-xl font-bold">Centro Enologico Meridionale</div>
        <div class="flex items-center gap-1">
          <img class="w-5" src="/images/phone.svg" alt="" />
          <div>0859031303</div>
        </div>
        <div class="flex items-center gap-1">
          <img class="w-5" src="/images/email.svg" alt="" />
          <a href="mailto:info@cem-group.it">info@cem-group.it</a>
        </div>
      </div>

      <div class="flex flex-col gap-1">
        <div class="text-xl font-bold">CEM Service</div>
        <div class="flex items-center gap-1">
          <img class="w-5" src="/images/phone.svg" alt="" />
          <div>0859032382</div>
        </div>
        <div class="flex items-center gap-1">
          <img class="w-5" src="/images/email.svg" alt="" />
          <a href="mailto:info@cem-group.it">ortona@caacanapa.it</a>
        </div>
      </div>
    </div>
  </div>
  <LeafletMap />
</Layout>
