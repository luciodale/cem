---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Il Centro Enologico Meridionale, nato nel 1971 da un’intuizione
    dell’enologo Italo De Luca, riunisce una squadra di professionisti in
    grado di offrire servizi qualificati alle aziende vinicole, in tutti
    gli aspetti della filiera vitivinicola"
    />
    <meta name="robots" content="index, follow" />
    <meta
      name="keywords"
      content="vino, analisi, enologia, centro enologico meridionale, consulenza"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="/fonts.css" />
    <link rel="stylesheet" href="/style.css" />

    <title>{title}</title>
  </head>
  <body class="font-century">
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>
